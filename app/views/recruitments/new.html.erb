<div class="container">
  <div class="row">
    <div class="col-lg-3 text-center">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="col-lg-9 new-edit-recruit">
      <h3>新規募集の作成</h3>
      <%= form_with model:@recruit, url: recruitments_path, local: true do |f| %>
        <%= f.label :タイトル：, class: 'title' %></br>
        <%= f.text_field :title, class: 'form-control enter-field' %>
        <%= f.label :スポーツ名：, class: 'title' %></br>
        <%= f.select :sport, Recruitment.sports.keys, {}, {class: 'form-control enter-field'} %>
        <%= f.label :開催日時：, class: 'title' %></br>
        <%= f.datetime_field :event_date, class: 'form-control enter-field' %>
        <%= f.label :応募締め切り日時：, class: 'title' %></br>
        <%= f.datetime_field :due_date, class: 'form-control enter-field' %>
        <%= f.label :都道府県：, class: 'title' %></br>
        <%= f.select :prefecture, Recruitment.prefectures.keys, {}, {class: 'form-control enter-field'} %>
        <%= f.label :場所：, class: 'title' %></br>
        <%= f.text_field :place, class: 'form-control enter-field' %>
        <%= f.label :募集人数：, class: 'title' %></br>
        <%= f.select :recruit_number, (1..30).each{ |n| n }, {}, {class: 'form-control enter-field'} %>
        <%= f.label :募集する人のレベル：, class: 'title' %></br>
        <%= f.select :level, Recruitment.levels.keys, {}, {class: 'form-control enter-field'} %>
        <%= f.label :本文：, class: 'title' %></br>
        <%= f.text_area :body, size: "0x15", class: 'form-control enter-field' %>
        <div class="text-center">
          <%= f.submit "募集を投稿する", class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>