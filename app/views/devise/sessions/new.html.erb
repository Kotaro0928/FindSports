<div class="devise_block">
  <h3>ログイン</h3>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'enter-field form-control form-control-sm' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: 'enter-field form-control form-control-sm' %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: 'btn btn-primary sign-in-button form-control' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>