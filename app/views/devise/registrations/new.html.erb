<div class="devise_block">
  <h3>新規登録</h3>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder: "ニックネーム", class: 'enter-field form-control form-control-sm' %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'enter-field form-control form-control-sm' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: 'enter-field form-control form-control-sm' %></br>
      <% if @minimum_password_length %>
        <em>（パスワードは<%= @minimum_password_length %>文字以上で作成してください）</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）", class: 'enter-field form-control form-control-sm' %>
    </div>

    <div class="actions">
      <%= f.submit "登録する", class: 'btn sign-up-button form-control' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>