<div class="container">
  <div class="row">
    <div class="col-lg-3 text-center">
      <%= render 'layouts/sidebar' %>
    </div>
    <div class="col-lg-9 new-edit-blog">
      <h3>新規ブログの作成</h3>
      <%= form_with model:@blog, url: blogs_path, local: true do |f| %>
        <%= f.label :タイトル：, class: 'title' %></br>
        <%= f.text_field :title, class: 'form-control enter-field' %>
        <%= f.label :スポーツ名：, class: 'title' %></br>
        <%= f.select :sport, Blog.sports.keys, {}, {class: 'form-control enter-field'} %>
        <%= f.label :本文：, class: 'title' %></br>
        <%= f.text_area :body, size: "0x15", class: 'form-control enter-field' %>
        <div class="text-center">
          <%= f.submit "ブログを投稿する", class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>