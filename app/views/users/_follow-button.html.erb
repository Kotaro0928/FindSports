<% if current_user.following?(user) %>
  <%= link_to user_relationships_path(user.id), method: :delete, class: "btn btn-secondary btn-sm follow-btn", remote: true do %>
    <i class="fas fa-user-times"></i> フォローを外す
  <% end %>
<% else %>
  <%= link_to user_relationships_path(user.id), method: :post, class: "btn btn-primary btn-sm follow-btn", remote: true do %>
    <i class="fas fa-user-plus"></i> フォローする
  <% end %>
<% end %>