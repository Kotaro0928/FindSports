<div class="search">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <div class="form-group">
      <%= f.text_field :content, placeholder: "検索ワード", class: 'form-control' %>
      <div class="form-inline mt-1">
        <div class="col-lg-9 pl-0">
          <%= f.select :model, options_for_select({ "会員" => "user", "募集" => "recruit", "ブログ" => "blog" }), {}, {class: 'form-control', style: 'width: 100%;'} %>
        </div>
        <div class="col-lg-3 p-0">
          <%= f.button :type => "submit", class:'icon form-control', style: 'width: 100%;' do %>
            <i class="fas fa-search"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>